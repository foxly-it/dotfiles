# ============================================================
# ZORAXY – Docker Environment Configuration
# Version: v3.3.0 by Foxly
# ============================================================

# ------------------------------------------------------------
# Allgemein
# ------------------------------------------------------------

# Zeitzone im Container
TZ=Europe/Berlin

# ------------------------------------------------------------
# Port-Mapping (Host → Container)
# ------------------------------------------------------------

# Öffentlicher HTTP-Port (Standard: 80)
ZORAXY_HTTP_PORT=80

# Öffentlicher HTTPS-Port (Standard: 443)
ZORAXY_HTTPS_PORT=443

# WebUI-Port auf dem Host
# Greift intern immer auf Port 8000 im Container zu
ZORAXY_UI_PORT=8062

# ------------------------------------------------------------
# Sicherheit & Zugriff
# ------------------------------------------------------------

# WebUI-Login aktivieren
# false = Login erforderlich (EMPFOHLEN)
# true  = WebUI ohne Auth (NICHT empfohlen)
ZORAXY_NOAUTH=false


# ------------------------------------------------------------
# Docker Integration
# ------------------------------------------------------------

# Docker Auto-Discovery
# true  = Zoraxy darf Docker-Container erkennen
# false = Deaktiviert (SICHERER)
ZORAXY_DOCKER=true


# ------------------------------------------------------------
# Konfiguration & Storage
# ------------------------------------------------------------

# Automatisches Upgrade der Config bei Versionswechsel
ZORAXY_CFGUPGRADE=true

# Datenbank Backend
# auto = Zoraxy entscheidet selbst (empfohlen)
ZORAXY_DB=auto

# Plugin-Verzeichnis im Container
ZORAXY_PLUGIN_PATH=/opt/zoraxy/plugin

# ------------------------------------------------------------
# Optionale Features
# ------------------------------------------------------------

# GeoIP Fast Mode
# true  = Schnell, aber ~1 GB RAM
# false = Deaktiviert
ZORAXY_FASTGEOIP=false

# mDNS (lokale Netzwerke)
ZORAXY_MDNS=false

# Web File Manager
# true  = aktiviert
# false = deaktiviert (empfohlen auf Servern)
ZORAXY_WEBFM=true

# ZeroTier Integration
ZORAXY_ZEROTIER=false
